            <TextField prefHeight="35.0" prefWidth="210.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="160.0" />
            <DatePicker fx:id="datePicker" AnchorPane.leftAnchor="110.0" AnchorPane.topAnchor="50.0" />
