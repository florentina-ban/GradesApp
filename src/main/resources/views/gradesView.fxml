                <TableColumn fx:id="gradesStudentNameCol" prefWidth="130.0" text="Student Name" />
                  <TableColumn fx:id="gradesAssignmentCol" prefWidth="100.0" text="Assignment" />
                  <TableColumn fx:id="gradesGradeCol" prefWidth="60.0" text="Grade" />
