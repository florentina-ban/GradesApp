               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleAddGrade" prefHeight="35.0" prefWidth="100.0" text="Add Grade" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="30.0" />
            <TextField fx:id="gradeTextField" prefHeight="35.0" prefWidth="580.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" />
            <TableView prefHeight="350.0" prefWidth="250.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="160.0">
              <columns>
                <TableColumn prefWidth="100.0" text="First Name" />
                <TableColumn prefWidth="100.0" text="Last Name" />
