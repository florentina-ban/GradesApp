<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-image: url(green2.jpg);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GradesController">
   <children>
