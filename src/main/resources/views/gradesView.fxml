                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="150.0" text="Search student by name" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchTextFieldGrade" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="210.0" style="-fx-background-color: #abeba0;">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="550.0" prefWidth="600.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
